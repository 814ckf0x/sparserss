<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android" >
  <LinearLayout
    android:paddingLeft="4pt" 
    android:layout_height="wrap_content"
    android:layout_width="fill_parent"
    android:layout_alignParentTop="true">
    <TextView 
      android:paddingTop="2pt"
      android:layout_height="wrap_content" android:id="@+id/entry_date" android:layout_width="wrap_content" android:layout_gravity="fill" android:layout_weight="1" />
 	<ImageView
  android:layout_alignParentRight="true"
  android:layout_width="wrap_content" 
  android:layout_height="wrap_content" 
  android:id="@android:id/icon"/>
  </LinearLayout>
  <View android:background="@android:drawable/title_bar" android:layout_width="fill_parent" android:layout_height="1dp" />
  <LinearLayout 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:id="@+id/linear_wrapper"
		android:padding="1dip"
		android:layout_gravity="fill"
		android:layout_weight="1">
		<WebView android:layout_height="wrap_content" android:id="@+id/entry_abstract" android:layout_width="wrap_content" />
  </LinearLayout>
  <View android:background="@android:drawable/title_bar" android:layout_width="fill_parent" android:layout_height="1dp" />
  <LinearLayout
  	android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:paddingTop="1dip">
  	<Button android:layout_height="wrap_content" android:text="&lt;-" android:id="@+id/prev_button" android:layout_width="70dp"/>
  	<Button android:layout_height="wrap_content" android:text="@string/goto_url" android:id="@+id/url_button" android:layout_width="fill_parent"
  	android:layout_gravity="fill"
		android:layout_weight="1"/>
  	<Button android:layout_height="wrap_content" android:text="-&gt;" android:id="@+id/next_button" android:layout_width="70dp"
		/>
  </LinearLayout>
  
</LinearLayout>
